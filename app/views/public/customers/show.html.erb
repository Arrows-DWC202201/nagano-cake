<div class="container">
  <h3 class="mb-3">マイページ</h3>
  <div class="row mb-2">
    <span class="col-lg-1"><b>登録情報</b></span><%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
  </div>

  <table class="table table-bordered mr-auto mb-2">
    <tbody>
      <tr>
        <th scope="row" class="bg-light">氏名</th>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th scope="row" class="bg-light">カナ</th>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th scope="row" class="bg-light">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th scope="row" class="bg-light">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th scope="row" class="bg-light">電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th scope="row" class="bg-light">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>

  <div class="row mb-1">
    <span class="col-lg-1"><b>配送先</b></span><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
  </div>
  <div class="row">
    <span class="col-lg-1"><b>注文履歴</b></span><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>

</div>
