<div class="container">
  <h3>会員情報編集</h3>
  <%= form_with model: @customer, url: update_customers_path, method: :patch, local:true do |f| %>
    <div class="form-group row">
      <%= f.label :last_name, "氏名", class: "col-sm-2"%>
      <%= f.text_field :last_name, class: "col-sm-2" %>　<%= f.text_field :first_name, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :last_name_kana, "フリガナ", class: "col-sm-2"%>
      <%= f.text_field :last_name_kana, class: "col-sm-2" %>　<%= f.text_field :first_name_kana, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号", class: "col-sm-2"%>
      <%= f.text_field :postal_code, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-sm-2"%>
      <%= f.text_field :address, class: "col-sm-7" %>
    </div>
    <div class="form-group row">
      <%= f.label :phone_number, "電話番号", class: "col-sm-2"%>
      <%= f.text_field :phone_number, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-sm-2"%>
      <%= f.text_field :email, class: "col-sm-3" %>
    </div>
    <div class="form-group row">
      <span class="col-sm-2"></span>
      <%= f.submit "編集内容を保存", class: "btn btn-primary"%>
      <span class="col-sm-4"></span>
      <%= link_to "退会する", quit_customers_path, class: "btn btn-danger"%>
    </div>
<% end %>
</div>