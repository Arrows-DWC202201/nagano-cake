<h1>ショッピングカート</h1>

<div>
  <%= link_to "カートを空にする", cart_item_path, method: :destroy, "data-confirm" => "本当に削除しますか？" %>
</div>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @cart_items.each do |cart_item| %>
      <td>
        <%= image_tag attachment_url(@item, :image) %>
        <%= @cart_item.name %>
      </td>
      <td><%= @cart_item.with_tax_price.to_s(:delimited) %></td>
      <td><%= @cart_item.quantity %></td>
      <td><%= @cart_item.subtotal %></td>
      <td><%= link_to "削除する", cart_item_path(@cart_item), method: :destroy, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  </tbody>
</table>

<div>
  <%= link_to "買い物を続ける", root_path %>
</div>

<table>
  <tr>
    <th>合計金額</th>
    <th><%= @total.to_s(:delimited) %></th>
  </tr>
</table>

<% unless @cart_items.empty? %>
  <div>
    <%= link_to "情報入力に進む", new_order_path %>
  </div>
<% end %>