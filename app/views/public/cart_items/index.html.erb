<div class="row">
  <h3>ショッピングカート</h3>
  <div>
    <%= link_to "カートを空にする", cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>
  </div>
</div>

<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @cart_items.each do |cart_item| %>
        <td>
          <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "100x80" %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        <td>
          <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
            <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
            <%= f.hidden_field :item_id, :value => cart_item.item.id %>
            <%= f.submit "変更" ,class: "btn btn-dark btn-sm ml-5"%>
          <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>

<div class="row">
  <div>
    <%= link_to "買い物を続ける", root_path %>
  </div>

  <table class="table">
    <tr>
      <th>合計金額</th>
      <th><%= @total.to_s(:delimited) %></th>
    </tr>
  </table>
</div>

<% unless @cart_items.empty? %>
  <div>
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
  </div>
<% end %>