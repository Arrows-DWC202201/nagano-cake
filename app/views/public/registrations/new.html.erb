<div class="container">
  <h2>新規会員登録</h2>
  <%= flash[:notice] %>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row form-group">
      <div class="col-sm-2"><%= f.label :名前 %></div>

      <div class="col-sm-1"><%= f.label :last_name, "(姓)" %></div>
      <div class="col-sm-2"><%= f.text_field :last_name %></div>

      <div class="col-sm-1"><%= f.label :first_name, "(名)" %></div>
      <div class="col-sm-2"><%= f.text_field :first_name %> </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-2"><%= f.label :フリガナ %></div>

      <div class="col-sm-1"><%= f.label :last_name_kana, "(セイ)" %></div>
      <div class="col-sm-2"><%= f.text_field :last_name_kana %></div>

      <div class="col-sm-1"><%= f.label :first_name_kana, "(メイ)" %></div>
      <div class="col-sm-2"><%= f.text_field :first_name_kana %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
      <div class="col-sm-9"><%= f.text_field :postal_code %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :address, "住所" %></div>
      <div class="col-sm-9"><%= f.text_field :address %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :phone_number, "電話番号(ハイフンなし)" %></div>
      <div class="col-sm-9"><%= f.text_field :phone_number %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-sm-9"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %></div>
      <div class="col-sm-9"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
      <div class="col-sm-9"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>

    <div class="form-group offset-3">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

  <h2>既に登録済みの方</h2>

  <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
</div>