<div class="container">
  <div class="row">
  <h3>商品一覧（全<%= @items.count %>件）</h3>

  <% @items.each do |item| %>
    <div class="card">
      <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, size: "200x150", class: "card" %>
      <% end %>
      <div class="card-body">
        <div class="card-title"><%= item.name %></div>
          <div>¥<%= item.wiith_tax_price.to_s(:delimited) %>(税込)</div>
        </div>
    </div>
  <% end %>

  <%= paginate post_images %>
  </div>
</div>