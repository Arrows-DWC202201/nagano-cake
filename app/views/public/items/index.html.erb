<div class="container">

  <div class="row">
    <%= render "public/homes/sidebar" %>
  </div>

    <div class="col-sm-8 offset-sm-1">
      <h3>商品一覧（全<%= @items.count %>件）</h3>
      <div class="row">
      <% @items.each do |item| %>
        <div class="card">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, size: "200x150", class: "card" %>
          <% end %>
          <div class="card-body">
            <div class="card-title"><%= item.name %></div>
              <div>¥<%= item.with_tax_price.to_s(:delimited) %>(税込)</div>
            </div>
        </div>
      <% end %>
      </div>

      <%= paginate @items %>
    </div>
</div>