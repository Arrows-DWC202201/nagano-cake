<div>
  <%= image_tag attachment_url(@item, :image) %>
  <p><%= @item.name %></p>
  <p><%= @item.introduction %></p>
  <p>¥<%= @item.with_tax_price.to_s(:delimited) %>(税込)</p>

  <% form_with model: @cart_items do |f| %>
    <%= f.hidden_field :item_id, value => @item.id %>
    <%= f.select_field :quantity, [*1..10], include_blank: "個数選択" %>
    <%= f.submit "カートに入れる" %>
  <% end %>
</div>