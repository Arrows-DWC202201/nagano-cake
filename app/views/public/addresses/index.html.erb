<div class="container">
  <h3>配送先登録／一覧</h3>
  <%= form_with model: @address, local:true do |f| %>
    <div class="form-group row">
      <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-3"%>
      <%= f.text_field :postal_code, class: "col-sm-2"%>
    </div>
    <div class="form-group row">
      <%= f.label :住所, class: "col-sm-3"%>
      <%= f.text_field :address, class: "col-sm-5"%>
    </div>
    <div class="form-group row">
      <%= f.label :宛名, class: "col-sm-3"%>
      <%= f.text_field :name, class: "col-sm-2"%>
      <%= f.submit "新規登録", class: "btn btn-success offset-sm-3"%>
    </div>
  <% end %>
  <table class="table table-bordered mr-auto">
    <thead class="table-active">
      <tr class="bg-light">
        <th class="col-sm-1">郵便番号</th>
        <th class="col-sm-3">住所</th>
        <th class="col-sm-1">宛名</th>
        <th class="col-sm-2"></th>
      </tr>
    </thead>
    <% @addresses.each do |addresses| %>
    <tbody>
      <tr>
        <td><%= addresses.postal_code %></td>
        <td><%= addresses.address %></td>
        <td><%= addresses.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(addresses), class: "btn btn-primary"%>
          <%= link_to "削除する", address_path(addresses), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>


</div>