<div class="container">
  <h3 class="mb-3">注文履歴一覧</h3>
  <div class="row">
    <table class="table table-bordered mr-auto mb-2">
      <thead>
        <tr scope="row" class="bg-light">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="align-middle"><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td class="align-middle">
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %></td>
            <td class="align-middle">
              <% order.order_items.each do |order_item| %>
                <%= order_item.item.name %><br>
              <% end %>
            </td>
            <td class="align-middle"><%= (order.total_payment + 800).to_s(:delimited) %>円</td>
            <td class="align-middle"><%= order.order_status_i18n %></td>
            <td class="align-middle text-center">
              <%= link_to "表示する", order_path(order) ,class: "btn btn-primary"%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>