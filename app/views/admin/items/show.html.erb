<div class="container">
  <h3 class="mb-3">商品詳細</h3>

  <div class="row mt-5">
    <div class="col-5"><%= attachment_image_tag @item, :image, format: 'jpeg', size: "300x300" %></div>

    <div class="col-7">

      <div class="row">
        <div class="col-5">商品名</div>
        <div class="col-7"><%= @item.name %></div>
      </div>

      <div class="row mt-3">
        <div class="col-5">商品説明</div>
        <div class="col-7"><%= @item.introduction %></div>
      </div>

      <div class="row mt-3">
        <div class="col-5">ジャンル</div>
        <div class="col-7"><%= @item.genre.name %></div>
      </div>

      <div class="row mt-3">
        <div class="col-5">税込価格<br>(税抜価格)</div>
        <div class="col-7"><%= @item.with_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited)%>）円</div>
      </div>

      <div class="row mt-3">
        <div class="col-5">販売ステータス</div>
        <div class="col-7"><%= @item.is_active_i18n %></div>
      </div>

      <div class="text-center mt-4">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
      </div>

    </div>
  </div>
</div>