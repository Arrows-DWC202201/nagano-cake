<div class="container">
  <h3 class="mb-3">商品新規登録</h3>
  <div class="col-8 mt-5">
    <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <div class="form-group row">
        <div class="col-4"><%= f.label :商品画像 %></div>
        <div class="col-8"><%= f.attachment_field :image %></div>
      </div>
      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :商品名 %></div>
        <div class="col-8"><%= f.text_field :name, placeholder: "商品名", class: "form-control" %></div>
      </div>
      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :商品説明 %></div>
        <div class="col-8"><%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control", rows: "6" %></div>
      </div>
      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :ジャンル %></div>
        <div class="col-8"><%= f.collection_select(:genre_id, Genre.all, :id, :name, {include_blank: "--選択してください--"}, {class: 'form-control'}) %></div>
      </div>
      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :税抜価格 %></div>
        <div class="col-8 d-flex flex-row"><%= f.text_field :price, placeholder: "1000", class: "form-control" %>
          <div class="mt-2">円</div>
        </div>
      </div>
      <div class="form-group row mt-3">
        <div class="col-4"><%= f.label :販売ステータス %></div>
        <div class="col-8">
          <%= f.collection_radio_buttons :is_active, Item.is_actives_i18n, :first , :last %>
        </div>
      </div>
      <div class="text-center mt-4">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>