<div class="container">
  <div class="row offset-2">
    <h3>会員一覧</h3>
  </div>

  <div class="row offset-1 col-10 mt-3">
    <table class="table table-light table-striped">
      <thead class="table-active">
        <tr class="text-black bg-primary">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customer.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer.id), class: "text-dark", style: "text-decoration: underline" do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row justify-content-center">
  <%= paginate @customer %>
  </div>
</div>