<div class="container">
  <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  <%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
    <div class="form-group row">
      <%= f.label :会員ID, class: "col-sm-2"%>
      <%= @customer.id %>
    </div>
    <div class="form-group row">
      <%= f.label :氏名, class: "col-sm-2"%>
      <%= f.text_field :last_name, class: "col-sm-2" %>　<%= f.text_field :first_name, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :フリガナ, class: "col-sm-2"%>
      <%= f.text_field :last_name_kana, class: "col-sm-2" %>　<%= f.text_field :first_name_kana, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :郵便番号, class: "col-sm-2"%>
      <%= f.text_field :postal_code, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :住所, class: "col-sm-2"%>
      <%= f.text_field :address, class: "col-sm-7" %>
    </div>
    <div class="form-group row">
      <%= f.label :電話番号, class: "col-sm-2"%>
      <%= f.text_field :phone_number, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :メールアドレス, class: "col-sm-2"%>
      <%= f.text_field :email, class: "col-sm-3" %>
    </div>
    <div class="form-group row">
      <%= f.label :販売ステータス, class: "col-sm-2"%>
      <%= f.collection_radio_buttons :is_active, Customer.is_actives_i18n, :first , :last %>
    </div>

    <div class="form-group row">
      <span class="col-sm-2"></span>
      <%= f.submit "変更を保存", class: "btn btn-success"%>
<% end %>
</div>