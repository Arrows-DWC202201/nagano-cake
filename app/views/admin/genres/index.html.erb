<h4 class="offset-2 mt-4 ">ジャンル一覧・追加</h4>
<div class="col-8 mt-5">
  <%= form_with model: @genre, url:admin_genres_path, local: true do |f| %>
    <div class="form-group row">
      <div class="col-2 text-center offset-1"><%= f.label :ジャンル名 %></div>
      <div class="col-3"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
      <div class="col-2"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>
<div class="col-4 offset-1 ">
  <table class="table table-light">
    <thead class="table-active text-center">
      <tr class="">
        <th class="bg-muted">ジャンル</th>
        <th class="bg-muted"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td class="text-center"><%= genre.name %></td>
        <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>